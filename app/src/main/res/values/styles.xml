<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="AppTheme.Picker" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.EditText" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorHighlight">@color/blue</item>
    </style>
</resources>